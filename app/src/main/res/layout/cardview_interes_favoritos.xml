<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardInteres"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:clickable="true"
    android:foreground="@drawable/ripple"
    android:paddingBottom="0dp"
    app:cardCornerRadius="0dp"
    app:cardElevation="0dp"
    app:cardPreventCornerOverlap="true"
    app:contentPadding="0dp">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/layoutCardViewInteres"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="8dp">

        <ImageView
            android:id="@+id/cvImagenInteres"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerVertical="true"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginStart="8dp"
            android:scaleType="centerCrop"
            app:srcCompat="@mipmap/ic_launcher"
            app:layout_constraintEnd_toStartOf="@+id/cvTituloInteres"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/cvTituloInteres"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/cvImagenInteres"
            android:layout_alignParentBottom="false"
            android:layout_centerHorizontal="false"
            android:layout_centerInParent="false"
            android:layout_centerVertical="false"
            android:layout_marginStart="108dp"
            android:layout_marginTop="8dp"
            android:text="Título del evento"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@android:color/black"
            app:layout_constraintStart_toStartOf="@+id/cvImagenInteres"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/cvResumenInteres"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="Resumen de las opciones que el interés ofrece al usuario una vez seleccionado."
            app:layout_constraintStart_toEndOf="@+id/cvImagenInteres"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cvTituloInteres" />

        <Button
            android:id="@+id/undo_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/button_undo"
            android:textAllCaps="true"
            android:textColor="@android:color/white"
            android:layout_gravity="end|center_vertical"
            style="@style/Base.Widget.AppCompat.Button.Borderless"/>

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>